@model Core.Application.ViewModels.EventoViewModel
@using Core.Application.ViewModels

@{
  ViewData["Title"] = "Registrar Novo Evento";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Preencha todos os dados corretamente</h4>
        <hr />

        <vc:summary />

        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DescricaoCurta" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DescricaoCurta" class="form-control" />
                <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Descricao" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="10" cols="10" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Categoria" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.Partial("_Categorias")
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DataInicio" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DataFim" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Gratuito" />
                    <label asp-for="Gratuito"></label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Valor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Online" />
                    <label asp-for="Online"></label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NomeEmpresa" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NomeEmpresa" class="form-control" />
                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>
        ValidacoesEvento();
    </script>


    @{
      if (ViewBag.Retorno != null)
      {
          var notificacao = ViewBag.Retorno.ToString().Split(',');
        
        <script>
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr["@notificacao[0]"]("@notificacao[1]");
        </script>

      }
    }
}
